<h3>Users</h3>
<table class="table table-striped table-bordered">
  <thead>
  <tr>
    <th>Username</th>
    <th>Email</th>
    <th>Registered</th>
    <th>Role</th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.name, user %></td>
        <td><%= user.email %></td>
        <td><%= user.created_at.to_date %></td>
        <td><%= user.role %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
      </tr>
  <% end %>
  </tbody>
</table>
