<%= form_for @user, :html => {class: 'form-horizontal col-lg-4', role: 'form'} do |f| %>
    <div class="form-group ">
      <%= f.label :email_id %>
      <%= f.text_field :email, :class => "form-control", :disabled => true %>
    </div>
    <div class="form-group">
      <%= f.label :username %>
      <%= f.text_field :name, :class => "form-control", :disabled => true %>
    </div>
    <div class="form-group">
      <%= f.label :role %>
      <%= f.select :role, User.get_all_roles, {}, :class => "form-control" %>
    </div>
    <div class="actions">
      <%= f.submit :class => 'btn btn-success' %>
    </div>
<% end %>
