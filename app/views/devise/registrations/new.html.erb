<div class="well col-md-4 col-md-offset-4">
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {class: "form-horizontal", :role => 'form'}) do |f| %>
      <h3 style="text-align:center">Sign Up</h3>
      <%= devise_error_messages! %>
      <br/>
      <%= f.text_field :name, :autofocus => true, :placeholder => "Username", :class => "form-control" %>
      <br/>
      <%= f.password_field :password, :placeholder => "Password", :class => "form-control" %>
      <br/>
      <%= f.password_field :password_confirmation, :placeholder => "Password Confirmation", :class => "form-control" %>
      <br/>
      <%= f.submit 'Sign Up', :class => 'btn btn-primary' %>
  <% end %>
</div>


